{
    "compilerOptions": {
      "moduleResolution": "node",
      "outDir": "lib", 
      "removeComments": true, 
      "target": "ES6",
      "baseUrl": "./", 
      "esModuleInterop": true, 
      "strict": true,
      "allowUnreachableCode": false, 
      "noImplicitAny": true, 
      "noImplicitReturns": true,
      "noUncheckedIndexedAccess": true, 
      "noUnusedLocals": true, 
      "noUnusedParameters": true 
    },
    "include": ["src"],
    "exclude": [
      "node_modules/**/*"
    ]
  }